generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  surname    String
  email      String    @unique
  password   String
  sex        Sex       @default(NONE)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  columns    Column[]
  comments   Comment[]
}

enum Sex {
  FEMALE
  MALE
  NONE
}

model Column {
  id         String   @id @default(uuid())
  title      String
  author_id  String
  user       User     @relation(fields: [author_id], references: [id])
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Card {
  id          String    @id @default(uuid())
  title       String
  description String
  state       CardState @default(NONE)
  is_deleted  Boolean   @default(false)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  comments    Comment[]
}

enum CardState {
  NONE
  PENDING
  COMPLETED
}

model Comment {
  id         String   @id @default(uuid())
  card_id    String
  card       Card     @relation(fields: [card_id], references: [id])
  text       String
  author_id  String
  user       User     @relation(fields: [author_id], references: [id])
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
